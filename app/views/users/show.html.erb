<% provide(:title, "マイページ") %>
<div class="container">
  <h1>マイページ</h1>
  <div class="">
    <h3>ニックネーム</h3>
      <div>
        <%= @user.name %>
      </div>
    <h3>メールアドレス</h3>
      <div>
        <%= @user.email %>
      </div>
    <h3>プロフィール</h3>
      <div>
        <%= @user.introduction %>
      </div>
    <% if current_user == @user %>
      <div>
        <%= link_to '編集', edit_user_registration_path, class: "update" %>
      </div>
    <% end %>
    <%= @user.created_at %>, <%= @user.updated_at %>
  </div>
</div>